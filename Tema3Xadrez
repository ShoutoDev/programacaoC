#include <stdio.h>

int main (){
    char nome1[10]="Torre", nome2[10]="Bispo", nome3[10]="Rainha";  //Declaração dos nomes das peças e contadores
    int casa = 1;
    int casa2 = 1;

    do{
        printf("A %s andou %d Casas para Direita\n", nome1, casa);   //Repetição para Torre
        casa++;

    }while(casa <= 5);

    printf("------------------------------------------------------\n");    

    while(casa2 <= 8){
        printf("A %s andou %d Casas para a esquerda \n", nome3, casa2);  //Repetição para Rainha
        casa2++;
    }

    printf("------------------------------------------------------\n");

    for(int i = 1; i <= 5; i++){
        printf("O %s andou %d Casas na Diagonal: (Cima, Direita) \n", nome2, i); //Repetição para o Bispo
    }

    return 0;
}
